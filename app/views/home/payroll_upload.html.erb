<%= form_for :company_payroll, url: "/payroll_parse", :html => {:class => "form-horizontal center"} do |form| %>
  <div class="form-group">
    <strong><%= form.label :month %></strong>
    <div class="col-md-8">
      <%= select_month(Date.today, :field_name => 'month', :prefix => 'company_payroll') %>
    </div>
  </div>
  <div class="form-group">
    <strong><%= form.label :year %></strong>
    <div class="col-md-8">
      <%= select_year(Date.today, :field_name => 'year', :prefix => 'company_payroll') %>
    </div>
  </div>
  <div class="form-group">
    <strong><%= form.label :company_name %></strong>
    <div class="col-md-8">
      <%= form.collection_select :company_id, @companies,:id,:name, {:selected => @default_company}, include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <strong><%= form.label :file %></strong>
    <div class="col-md-8">
      <%= form.file_field :file %>
    </div>
  </div>
  <%= form.submit  %>
<% end  %>
<div class="home_button">
  <%= link_to '<button type="button">Companies</button>'.html_safe, companies_path %>
</div>